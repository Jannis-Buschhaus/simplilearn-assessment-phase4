package com.controller;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.http.MediaType;
import org.springframework.stereotype.Controller;
import org.springframework.ui.Model;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestMethod;

import com.entity.Owner;
import com.service.OwnerService;

@Controller
public class PetClinicController {

	@Autowired OwnerService os;
	
	@GetMapping(value="/owners")
	public String owners(Model m) {
//		os.storeOwner(new Owner(1, "John Doe", "+49 1234 56789"));
		List<Owner> owners = os.getOwners();
		m.addAttribute("owners", owners);
		System.out.println(owners.toString());
		return "owners";
	}
	
	@GetMapping(value="/ownersrest", produces = MediaType.APPLICATION_JSON_VALUE)
	public List<Owner> ownersrest() {
		return os.getOwners();
	}
}