package com.service;

import java.util.List;
import java.util.Optional;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.entity.Owner;
import com.repository.OwnerRepository;

@Service
public class OwnerService {
	
	@Autowired
	OwnerRepository or;
	
	public List<Owner> getOwners(){
		return or.findAll();
	}
	
	public Owner findOwnerById(int ownerId) {
		Optional<Owner> result = or.findById(ownerId);
		if(result.isPresent()) {
			return result.get();
		} else {
			return null;
		}
	}
	
	public String storeOwner(Owner o) {
		or.saveAndFlush(o);
		Optional<Owner> result = or.findById(o.getOwnerId());
		if(result.isPresent()) {
			return "New Owner saved";
		} else {
			return "Owner has not been saved";
		}
		
	}

}
