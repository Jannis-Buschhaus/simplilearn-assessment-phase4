package com.controller;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.http.MediaType;
import org.springframework.stereotype.Controller;
import org.springframework.ui.Model;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.ResponseBody;

import com.entity.Owner;
import com.service.OwnerService;

import jakarta.servlet.http.HttpServletRequest;

@Controller
public class PetClinicController {

	@Autowired OwnerService os;
	
	private void getOwners(Model m){
		List<Owner> owners = os.getOwners();
		m.addAttribute("owners", owners);
	}
	
	@GetMapping(value="/manageCustomers")
	public String owners(Model m) {
		getOwners(m);
		return "owners";
	}
	
	@ResponseBody
	@GetMapping(value="/customersRest", produces = MediaType.APPLICATION_JSON_VALUE)
	public List<Owner> ownersrest() {
		return os.getOwners();
	}
	
	@PostMapping(value="/newCustomer")
	public String newCustomer(HttpServletRequest req, Model m) {
		int id;
		if(req.getParameter("customerId") != "") {
			id=Integer.parseInt(req.getParameter("customerId"));
		} else {
			id=0;
		}
		Owner o = new Owner(
				id,
				req.getParameter("name"),
				req.getParameter("phoneNumber")
				);
		String msg = os.storeOwner(o);
		m.addAttribute("msg", msg);
		getOwners(m);
		return "owners";
	}
	
	@GetMapping(value="/deleteCustomer")
	public String deleteCustomer(HttpServletRequest req, Model m) {
		int id=Integer.parseInt(req.getParameter("id"));
		Owner o = os.findOwnerById(id);
		if(o == null) {
			m.addAttribute("msg", "Customer ID not found");
		} else {
			m.addAttribute("msg", os.deleteOwner(o));
			os.deleteOwner(o);
		}
		getOwners(m);
		return "owners";
	}
}